#!/bin/sh

DUMP_FILE=/db/supabase-remote-data-`date +%s`.sql
HOST_DIR=`pwd`/dumps

. `dirname $0`/library.sh

docker run \
        --rm -it \
        --network host \
        -v $HOST_DIR:/db postgres:17-alpine \
    pg_dump \
        --verbose \
        --host aws-0-eu-west-2.pooler.supabase.com \
        --port 6543 \
        --dbname=postgres \
        --username=postgres.pqlwxerasppsyleweruk \
        --file=$DUMP_FILE \
        --schema=public \
        --schema=auth \
        --data-only

echo "Dumped to $HOST_DIR/`basename $DUMP_FILE`"
